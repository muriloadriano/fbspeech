{
	"manifest_version": 2,

	"name": "Facebook Speech",
	"description": "This extension enables speech recognition for some Facebook functionalities.",
	"version": "1.0",

	"permissions": [
		"tabs",
		"*://*.facebook.com/*",
		"storage",
		"tts"
	],

	"content_scripts": [{
			"matches": [
				"*://*.facebook.com/*"
			],
			"js": ["jquery-2.0.0.min.js","content.js", "key_events.js"],
			"run_at": "document_end"
	}],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "config.html"
	},

	"icons": {
		"128": "icon.png"
	},

	"background": {
		"persistent": false,
		"scripts": ["language_selection.js"]
	}
}