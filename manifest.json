{
	"manifest_version": 2,

	"name": "Facebook Speech",
	"description": "This extension enables speech recognition for some Facebook functionalities.",
	"version": "1.0",

	"permissions": [
		"tabs",
		"*://*.facebook.com/*",
		"storage"
	],

	"content_scripts": [{
			"matches": [
				"*://*.facebook.com/*"
			],
			"js": ["content.js"],
			"run_at": "document_end"
	}],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "config.html"
	},

	"background": {
		"persistent": false,
		"scripts": ["language_selection.js"]
	}
}